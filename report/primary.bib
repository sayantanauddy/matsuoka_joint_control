@article{Ishiguro2003,
abstract = {So far various methods using the concept of neural circuit or so-called Central Pattern Generators (CPG) habe been proposed in order to create agile locomotion for legged robots. In contrast to these aproaches, this paper proposes a polymorphic neural circuit which allowes the dynamic change of its properites according to the current situation in real time, to be employed instead. To this end, the concept of neuromodulation is introduced. To verify the feasibility of this approach, this concept is applied to the control of a 3-D biped robot which is intrinsically unstable. The importance of an adaptive controller is illustrated whith the simulations of biped walking on uneven terrain, and the results showed that the biped robot successfully copes with environmental pertubation by dynamically changing the torque output applied to the joints. Furthermore, the proposed approach outperforms monolithic CPG model with sensory feedback.},
author = {Ishiguro, Akio and Fujii, Akinobu and {Eggenberger Hotz}, Peter},
doi = {10.1177/10597123030111001},
file = {:home/sayantan/Knowledge/Independant Studies/Robot Walking/references/Papers/Ishiguro-Neuromodulated Control of Bipedal Locomotion using a Polymorphic CPG circuit.pdf:pdf},
issn = {00000000},
journal = {Adaptive Behavior},
keywords = {Biped Robot,Central Pattern Generator (CPG),Lokomotion,Neuromodulation,Real-time Adaption},
number = {1},
pages = {7},
title = {{Neuromodulated Control of Bipedal Locomotion Using a Polymorphic CPG Circuit}},
url = {http://adb.sagepub.com/cgi/content/abstract/11/1/7},
volume = {11},
year = {2003}
}
@article{Matsuoka1985,
abstract = {Autonomic oscillatory activities exist in almost every living thing and most of them are produced by rhythmic activities of the corresponding neural systems (locomotion, respiration, heart beat, etc.). This paper mathematically discusses sustained oscillations generated by mutual inhibition of the neurons which are represented by a continuous-variable model with a kind of fatigue or adaptation effect. If the neural network has no stable stationary state for constant input stimuli, it will generate and sustain some oscillation for any initial state and for any disturbance. Some sufficient conditions for that are given to three types of neural networks: lateral inhibition networks of linearly arrayed neurons, symmetric inhibition networks and cyclic inhibition networks. The result suggests that the adaptation of the neurons plays a very important role for the appearance of the oscillations. Some computer simulations of rhythmic activities are also presented for cyclic inhibition networks consisting of a few neurons.},
author = {Matsuoka, K},
doi = {10.1007/BF00449593},
file = {:home/sayantan/Knowledge/Independant Studies/Robot Walking/references/Papers/Matsuoka85BiolCybern.pdf:pdf},
isbn = {6},
issn = {0340-1200},
journal = {Biological cybernetics},
number = {6},
pages = {367--376},
pmid = {2996634},
title = {{Sustained oscillations generated by mutually inhibiting neurons with adaptation.}},
volume = {52},
year = {1985}
}
